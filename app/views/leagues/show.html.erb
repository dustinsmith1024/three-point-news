


<header class="point-header" style="border-bottom: 2px solid black">
	<h1><%= @league.titleize %> Teams</h1>
  
  	<nav class="back">
    	<%= link_to 'Back to all sports', root_path %>
  	</nav>
</header>

<ul class="teams-list">
<% @teams.each do |team| %>
  <li>
  	<%= link_to sport_league_team_path(@sport, @league, team.id) do %>
	  	<% if @league == 'nba' %>
	    	<%= image_tag "#{team.name.downcase.delete(' ')}.gif" %><%= "#{team.location} #{team.name}" %>
	    <% else %>
	    	<span data-logo="true"><%= "#{team.location} #{team.name}" %></span>
	    <% end %>
  	<% end %>
  </li>
<% end %>
</ul>

<nav class="team-info">
<p><%= link_to 'Back to all sports', sports_path, class: 'back-link' %></p>
</nav>