<article>

  <header class="point-header" style="border-bottom: 2px solid black">
  <% if @league %>
    <h1><%= @league.titleize %></h1>
  <% else %>
    <h1><%= @sport.titleize %> Headlines</h1>
  <% end %>
  
  <nav class="back">
    <%= link_to 'Back to home', root_path %>
  </nav>
</header>

  <section class="team-news points">
    <% @news.each_with_index do |item, index| %>
      <div class="point">
        <% if item.images[0] %>
          <%= render partial: 'leagues/image', locals: { item: item, index: index} %>
        <% else %>
          <%= render partial: 'leagues/no_image', locals: {item: item, index: index} %>
        <% end %>
      </div>
    <% end %>
  </section>

  <nav class="team-info">
    <p><%= link_to 'Back to home', root_path %></p>
  </nav>

</article>
