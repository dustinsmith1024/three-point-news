<h1>Listing posts</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Published</th>
    <th>Image url</th>
    <th>Team</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= post.published %></td>
    <td><%= post.image_url %></td>
    <td><%= post.team %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

